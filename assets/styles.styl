/* @group h5bp helpers */

html, button, input, select, textarea
  color: #ddd

body
  font-size: 1.333em
  line-height: 1.6666

::-moz-selection
  background: #b3d4fc
  text-shadow: none

::selection
  background: #b3d4fc
  text-shadow: none

hr
  display: block
  height: 1px
  border: 0
  border-top: 1px solid #ccc
  margin: 1em 0
  padding: 0

img
  vertical-align: middle

fieldset
  border: 0
  margin: 0
  padding: 0

textarea
  resize: vertical

.chromeframe
  margin: 0.2em 0
  background: #ccc
  color: #000
  padding: 0.2em 0

.ir
  background-color: transparent
  border: 0
  overflow: hidden
  *text-indent: -9999px

.ir:before
  content: ""
  display: block
  width: 0
  height: 100%

.hidden
  display: none !important
  visibility: hidden

.visuallyhidden
  border: 0
  clip: rect(0 0 0 0)
  height: 1px
  margin: -1px
  overflow: hidden
  padding: 0
  position: absolute
  width: 1px

.visuallyhidden.focusable:active, .visuallyhidden.focusable:focus
  clip: auto
  height: auto
  margin: 0
  overflow: visible
  position: static
  width: auto

.invisible
  visibility: hidden

.clearfix:before, .clearfix:after
  content: " "
  display: table

.clearfix:after
  clear: both

.clearfix
  *zoom: 1

/* h5bp helpers @end */
/* @group main styles */

html
  background: #111

body
  margin 0 auto
  padding 0
  position relative

/* main styles @end */
/*@group header */

#masthead
  fixed left right
  top 0
  background #262425
  background linear-gradient(top, #2b2b2b, #151515)
  border-top 1px solid #a4a4a4
  border-bottom 2px solid #000
  text-align right
  z-index 1

  .logo
    float left
    img
      overflow hidden
      position absolute

  nav
    display inline-block
  a
    color #eee
    display inline-block
    line-height 49px
    text-decoration none
    font-size 0.6666em
    margin-right 0.666em
    text-transform uppercase
    &:focus,
    &:hover
      color #e90128

  .icon
    background-image url(/assets/sprite.png)
    height 1.75em
    width 1.75em
    line-height 49px
    overflow hidden
    text-align left
    text-indent -99em
    vertical-align middle

  .icon-instagram
    background-position -233px -14px
  .icon-twitter
    background-position -258px -14px


/* header @end */
/* @group footer */

#footer
  fixed bottom 0 left 0
  right: 0

  padding 0.75em
  background #000
  color #fff
  font-size 0.5em

/* footer @end */
/* @group home */

#home
  img
    min-height 100%
    min-width 100%
    left -20%
    position relative

/* home @end */
/* @group about */
#about
  display none
  fixed top 3em right 10%
  z-index 1
  &:target
    display block

.popover
  background #131313
  border 1px solid #ddd
  box-shadow 0 0 2px #000
  color #ddd
  padding 1.5em
  width 20em
  .close
    absolute top 0.75em right 0.75em
    background #333
    border-radius 1.5em
    color #ccc
    font-size 0.666em
    font-weight bold
    display inline-block
    text-decoration none
    text-align center
    line-height 1.5em
    width 1.5em
  h2
    margin-top 0

